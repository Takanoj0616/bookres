
<div class= "col-xs-3">
<%= render 'books/list', book: @book_new, user: @user %>
</div>

<div class= "col-xs-9">

<h1>Book detail</h1>
<table class="table table-striped">
    <thead>
      <tr>
        <th></th>
     <th>Title</th>
     <th>Opinion</th>
   </tr>
 </thead>

 <tbody>
    <tr>
      <td>
        <%= link_to user_path(@book.user.id) do %>
        <%= @user.name %>
        <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %>
        <% end %>
      </td>
      <td><%= @book.title %></td>
      <td><%= @book.body%></td>
      <% if @book.user == current_user %>
        <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
        <td><span><%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "Are you sure?" %>
      <%end%>
      </span></td>
    </tr>

  </tbody>
</table>
</div>

