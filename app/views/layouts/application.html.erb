<!DOCTYPE html>
<html>
  <head>
    <title>Kadai</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-inverse">
      <div class="container">
        <div class="navbar-header">
          <spn class="navbar-brand">Bookers</spn>
        </div>
           <ul class="nav navbar-nav navbar-right">
           <% if user_signed_in? %>
            <li class="">
              <%= link_to ' Home', user_path(current_user), class: "glyphicon glyphicon-home" %>
            </li>
            <li class="">
              <%= link_to 'Users', users_path, class: "glyphicon glyphicon-user" %>
            </li>
            <li class="">
              <%= link_to 'Books', books_path, class: "glyphicon glyphicon-book" %>
            </li>
            <li class="">
              <%= link_to "logout", destroy_user_session_path, method: :delete, class: "glyphicon glyphicon-log-out" %>
            </li>
          <% else %>
            <li class="">
              <%= link_to "Home", root_path, class: "glyphicon glyphicon-home" %>
            </li>
            <li class="">
              <%= link_to "About", '/home/about', class: "glyphicon glyphicon-user" %>
            </li>
            <li class="">
              <%= link_to "sign up", new_user_registration_path, class: "glyphicon glyphicon-new-window" %>
            </li>
            <li class="">
              <%= link_to "login", new_user_session_path, class: "glyphicon glyphicon-log-in" %>
            </li>
          <% end %>
        </ul>
      </div>
    </nav>

     <div class= "container">
      <div class= "row">
        <% if flash[:notice] %>
         <div class="flash">
         <%= flash[:notice] %>
            </div>
         <% end %>

      <%= yield %>
    </div>
  </div>

  </body>
</html>