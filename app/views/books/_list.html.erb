
<h1>User info</h1>
<%= attachment_image_tag user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %>
<%= user.name %>
<%= user.introduction %>

<% if current_user.id == user.id %>
  <div>
   <%= link_to '編集', edit_user_path(current_user.id) %>
  </div>
<% end %>

<h1>New book</h1>

<ul>
  <% book.errors.full_messages.each do |msg| %>
  	<li><%= msg %></li>
  <% end %>
</ul>

<%= form_for book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>